{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": [
      "es2016"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "mocha",
      "node",
      "chai-subset"
    ],
    "baseUrl": ".",
    "paths": {
      "parse5": ["./node_modules/parse5/lib/index.d.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "*.d.ts"
  ]
}
